{
  "name": "iplayer-web-app-playback",
  "version": "1.0.0",
  "description": "Web app for the episode page on iPlayer",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "debug": "NODE_ENV=dev supervisor --watch . --ignore public/js,node_modules,dist --extensions js,json,jsx,hbs server.js >&0 | npm run scripts:watch",
    "precompile": "bundlr --format iife --name page --input scripts/episode.js --output dist/episode.js",
    "pretest": "npm run precompile",
    "test": "mocha 'test/!(e2e)/**/*.js' 'test/*.js'",
    "test:e2e": "mocha test/e2e/**/*.js --opts test/e2e/mocha.opts",
    "test:e2e:page": "mocha test/e2e/page --opts test/e2e/mocha.opts",
    "test:e2e:player": "mocha test/e2e/player --opts test/e2e/mocha.opts",
    "posttest": "npm run lint",
    "scripts:copy": "mkdir -p ./public/js && cp ./node_modules/@bbc/iplayer-web-app-playback-scripts/dist/* ./public/js/",
    "scripts:build": "npm run scripts:copy && npm run precompile",
    "scripts:watch": "nodemon --watch scripts --watch node_modules/@bbc/iplayer-web-app-playback-scripts/dist/ --exec 'npm run' scripts:build",
    "lint": "npm run lint:js && npm run lint:json",
    "lint:js": "eslint . --ext js,jsx",
    "lint:json": "jsonlint --dir ./config",
    "coverage": "npx nyc --reporter=lcov --reporter=cobertura npm test",
    "spec": "speculate --release $BUILD_NUMBER",
    "postinstall": "npm run scripts:copy"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BBC/iplayer-web-app-playback.git"
  },
  "author": "responsive-iplayer@lists.forge.bbc.co.uk",
  "license": "BBC",
  "bugs": {
    "url": "https://github.com/BBC/iplayer-web-app-playback/issues"
  },
  "homepage": "https://github.com/BBC/iplayer-web-app-playback",
  "dependencies": {
    "@bbc/dials-client": "^1.0.1",
    "@bbc/iplayer-web-components": "^34.7.2",
    "@bbc/iplayer-web-components-renderer": "^2.1.0",
    "@bbc/iplayer-web-experimentation": "^1.1.0",
    "@bbc/iplayer-web-frontend": "^12.2.1",
    "@bbc/iplayer-web-idcta-client": "^2.0.0",
    "@bbc/iplayer-web-legacy-static-assets": "^22.1.0",
    "@bbc/iplayer-web-metadata-converter": "^3.5.1",
    "@bbc/iplayer-web-orbit-prefetcher": "^3.4.0",
    "@bbc/iplayer-web-page-builder": "^19.0.0",
    "@bbc/iplayer-web-presenter-footer": "^4.1.1",
    "@bbc/iplayer-web-presenter-navigation": "^4.4.0",
    "@bbc/iplayer-web-routes": "^1.11.0",
    "@bbc/iplayer-web-script-bundler": "^5.1.0",
    "@bbc/iplayer-web-translate": "^3.1.0",
    "@ibl/client": "^4.7.0",
    "@ibl/logger": "^3.0.0",
    "@ibl/request": "^4.1.1",
    "@ibl/set-route-name": "^2.0.0",
    "@ibl/stats": "^5.0.0",
    "config": "^1.10.0",
    "express": "^4.13.1",
    "lodash": "^4.17.4"
  },
  "eslintConfig": {
    "extends": "iplayer-jsx"
  },
  "spec": {
    "requires": [
      "ibl-sysadmin",
      "ibl-collectibl",
      "iplayer-node-service-config",
      "tviplayer-app-logger",
      "dial-agent"
    ],
    "buildRequires": [
      "python",
      "nodejs-devel"
    ],
    "nodeVersion": "< 2:9.0.0"
  },
  "private": true,
  "devDependencies": {
    "@bbc/iplayer-web-app-playback-scripts": "^5.11.0",
    "@bbc/iplayer-web-page-objects": "^6.9.0",
    "@bbc/iplayer-web-webdriver": "^6.3.0",
    "@ibl/json-lint": "^1.0.1",
    "cheerio": "^0.22.0",
    "eslint": "^3.19.0",
    "eslint-config-iplayer-jsx": "^4.0.0",
    "jsdom": "^11.11.0",
    "mocha": "^5.2.0",
    "nock": "^9.0.13",
    "nodemon": "^1.17.5",
    "sinon": "^2.2.0",
    "speculate": "^1.7.0",
    "supertest": "^3.0.0",
    "supervisor": "^0.12.0"
  }
}
